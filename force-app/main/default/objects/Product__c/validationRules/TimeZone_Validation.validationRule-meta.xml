<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>TimeZone_Validation</fullName>
    <active>true</active>
    <errorConditionFormula>AND( Allow_scheduling__c =true ,ISPICKVAL(TimeZone__c, &apos;&apos;))</errorConditionFormula>
