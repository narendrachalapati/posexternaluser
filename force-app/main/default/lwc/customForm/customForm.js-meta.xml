<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>58.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>Custom Form Component</masterLabel>
    <description>This is a used in the screenflow.</description>
    <targets>
        <target>lightning__FlowScreen</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__FlowScreen">
            <property name="uuid" type="String" label="Enter Custom Form Id" required="true" />
            
            <property
                name="height"
                label="Height"
                type="String"
                default="500px"
                description="Specifies the height of the iframe. Default height is 500 pixels."
            />
            
            <property
                name="width"
                label="Width"
                type="String"
                default="100%"
                description="Specifies the width of an iframe. Default width is 100 percent."
            />

        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>